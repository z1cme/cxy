<h1>Listing pposts</h1>

<table>
  <tr>
    <th>Bbody</th>
    <th>Pkey</th>
  </tr>

<% @pposts.each do |ppost| %>
  <tr>
    <td><%=h ppost.bbody %></td>
    <td><%=h ppost.pkey %></td>
    <td><%= link_to 'Show', ppost %></td>
    <td><%= link_to 'Edit', edit_ppost_path(ppost) %></td>
    <td><%= link_to 'Destroy', ppost, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ppost', new_ppost_path %>