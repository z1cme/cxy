<h1>Editing ppost</h1>

<% form_for(@ppost) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :bbody %><br />
    <%= f.text_area :bbody %>
  </p>
  <p>
    <%= f.label :pkey %><br />
    <%= f.text_field :pkey %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @ppost %> |
<%= link_to 'Back', pposts_path %>